{
    "extends": ["recommended/node", "plugin:@typescript-eslint/recommended"],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaVersion": 2018,
        "sourceType": "module",
        "modules": true
    },
    "plugins": ["@typescript-eslint"],
    "settings": {
        "import/resolver": {
            "node": {
                "extensions": [".js", ".jsx", ".ts", ".tsx"]
            }
        }
    },
    "rules": {
        // General
        // ProTipâ„¢ keep rules in alphabetical order.
        "@typescript-eslint/explicit-function-return-type": 0,
        "@typescript-eslint/explicit-module-boundary-types": 0,
        "@typescript-eslint/interface-name-prefix": 0,
        "@typescript-eslint/no-empty-function": 0,
        "@typescript-eslint/no-inferrable-types": [2, { "ignoreParameters": true, "ignoreProperties": true }],
        "@typescript-eslint/no-use-before-define": 0,
        "@typescript-eslint/no-var-requires": 0,
        "@typescript-eslint/ban-types": 0,
        "arrow-body-style": 0,
        "class-methods-use-this": 0,
        "dot-notation": 0,
        "eqeqeq": [2, "always", { "null": "never" }],
        "eol-last": 2,
        "import/no-default-export": 2,
        "import/no-namespace": 0,
        "import/no-nodejs-modules": 0,
        "import/prefer-default-export": 0,
        "no-console": 2,
        "no-dupe-class-members": 0,
        "no-empty": 0,
        "no-invalid-this": 0,
        "no-new-func": 0,
        "no-prototype-builtins": 0,
        "no-use-before-define": 0,
        "no-useless-constructor": 0, // in favor of @typescript-eslint/no-useless-constructor
        "no-warning-comments": 0,
        "operator-assignment": 0,
        // Node specific
        "no-process-exit": 0,
        "no-sync": 0,
        // Inbox
        "import/named": 0,
        "@typescript-eslint/no-explicit-any": 0,
        "@typescript-eslint/no-non-null-assertion": 0,
        "@typescript-eslint/no-this-alias": 0,
        "@typescript-eslint/no-unused-vars": [
            "warn",
            {
                "ignoreRestSiblings": true,
                "args": "after-used",
                "varsIgnorePattern": "^_",
                "argsIgnorePattern": "^_"
            }
        ],
        "no-restricted-properties": [
            "error",
            {
                "object": "describe",
                "property": "only"
            },
            {
                "object": "it",
                "property": "only"
            }
        ]
    },
    "overrides": [
        {
            "files": ["*.js"],
            "rules": {
                "import/no-commonjs": 0
            }
        }
    ]
}
